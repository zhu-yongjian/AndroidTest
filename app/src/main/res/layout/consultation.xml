<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#ffffff"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/consultation_imageView"
            android:src="@drawable/people_pressed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/consultation_renming"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="高乃平"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/consultation_school"
            android:layout_marginTop="20dp"
            android:text="同济大学 | 机械与能源学院"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/consultation_yanjiu"
            android:text="研究方向/领域：建筑空调、通风、空气源热泵采暖、高效洁净燃烧系统"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>


