<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="#ffffff"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="horizontal">
<ImageView
    android:id="@+id/news_imageView"
    android:src="@drawable/people_pressed"
    android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_biaoti"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="武球王进球"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_neirong"
            android:layout_marginTop="45dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="西甲第26轮，西班牙人主场迎战巴拉多利德，在主队2-1领先的情况下，第65分钟发生的一幕，让所有中国球迷疯狂了..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_time"
            android:text="2018-10-30 18：28：27"
            android:textColor="#AAAAAA"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"/>
        </RelativeLayout>
</RelativeLayout>

