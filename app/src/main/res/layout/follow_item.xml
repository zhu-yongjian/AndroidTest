<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/touxiang"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/renming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textColor="#AAAAAA"
            android:text="艾琪亚娜回答了问题  *"/>

        <TextView
            android:id="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="155dp"
            android:text="1小时前"
            android:textColor="#AAAAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jianjie"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/biaoti"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="武球王进球"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/neirong"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="23dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="2019年3月2日，一个载入中国足球史册的日子。西甲第26轮，西班牙人主场迎战巴拉多利德，在主队2-1领先的情况下，第65分钟发生的一幕，让所有中国球迷疯狂了！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zan_number"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:text="12"
            android:textColor="#AAAAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:text="赞" />
        <TextView
            android:id="@+id/pinlun_number"
            android:layout_marginLeft="63dp"
            android:text="36"
            android:textColor="#AAAAAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:text="评论" />
    </RelativeLayout>
</RelativeLayout>
